#! /usr/bin/env bash

# Install/update script for all my dot files
#
# Author Dimitar Dimitrov <mitkofr@yahoo.fr>
# ------------------------------------------

# Settings {{{1

shopt -s extglob

# Plugin Authors
me=kurkale6ka
godlygeek=godlygeek
spiiph=spiiph
tpope=tpope

blue=$(tput setaf 4)
bold=$(tput bold)
reset=$(tput sgr0)

# matchit, vsearch, bgrep, php, xsd...
# git://github.com/godlygeek/netlib.git
# git://github.com/godlygeek/windowlayout.git

# todo:
# messages/quiet
# repo/working copy?
# improve ~/help/.gitignore
repos="$HOME"
dotfiles="$HOME"

bashfiles=bashfiles
helpfiles=help
vimfiles=vimfiles

github='github.com'
arg_plugins=(ln -sv)

program="${0##*/}"

# Print a message to stderr
warn() { echo "$@" >&2; }

show_help() { # {{{1

    warn "Usage: $program --links"
    warn "       $program --copy-plugins"
    warn "       $program --move-plugins"
    warn "       $program --omit-plugins"
    warn "       $program --verbose"
    warn "       $program --repos=repos-folder"
    warn "       $program --dotfiles=dotfiles-folder"
    warn "       $program --ip=github's ip"
    warn "       $program -h|--help|-?: this help text"
}

# Parse -|-- options {{{1
parse_option() {

    local option="$1"
    local value="${option#*=}"

    case "$option" in

           *repos*) repos="$value";;
        *dotfiles*) dotfiles="$value";;
              *ip*) github="$value";;
    esac
}

# Go trough all -|-- command line options
while [[ $1 == -* ]]; do

    case "$1" in

                 --*=*) parse_option "$1";    shift;;
               --links) arg_links="$1";       shift;;
        --copy-plugins) arg_plugins=(cp -fv); shift;;
        --move-plugins) arg_plugins=(mv -v);  shift;;
        --omit-plugins) arg_omit=omit;        shift;;
           # --verbose) arg_plugins=(  );     shift;;
         -h|--help|-\?) show_help;            exit 0;;
                    --) shift; break;;
                    -*) echo "invalid option: $1" 1>&2; show_help; exit 1;;
    esac
done

command -v git >/dev/null 2>&1 && git=true

copyRepo() { # {{{1

    local author="$1"
    local destination="$2"
    local repo="$3"

    [[ ! -d $destination ]] && mkdir -pv "$destination"

    printf "\n%-50s" "${bold}Copying $repo repository$reset..."

    if [[ -d $destination ]]; then

        if wget -qP "$destination" "http://github.com/$author/$repo/tarball/master"; then

            if
                tar -zxf "$destination"/*"$author"*"$repo"*.tar.gz -C "$destination"
                rm "$destination"/*"$author"*"$repo"*.tar.gz
                mv "$destination"/{*"$author"*"$repo"*/,"$repo"}
            then
                printf "... [ ${bold}OK$reset ]\n"
            else
                printf "... [ ${bold}FAILED$reset ]: $? (tar, rm or mv)\n"
            fi
        else
            printf "... [ ${bold}FAILED$reset ]: network failure\n"
        fi
    else
        printf "... [ ${bold}FAILED$reset ]: $destination folder couldn't be created\n"
    fi
}

choice() { # {{{1

    local quit="$1"
    local message="$2"

    if [[ go_on == $quit || ! $secondTime ]]; then

        printf "$message:\n\n"

        select choice in "${@:3}"; do

            # The first choice is for exiting
            if [[ $choice == $3 ]]; then

                if [[ quit == $quit ]]; then

                    exit 0
                else
                    return 1
                fi
            fi
            break
        done
    fi

    [[ go_on != $quit ]] && (( secondTime++ ))
}

cloneRepo() { # {{{1

    local author="$1"
    local repo="$2"
    local destination="$3"

    if [[ $author == $me ]]; then

        local remote_host="git@$github:"
    else
        local remote_host="git://$github/"
    fi

    if [[ $git ]]; then

        printf "\n%-50s" "${bold}Cloning $repo repository$reset..."

        if git clone -q "$remote_host$author/$repo.git" "$destination"; then

            printf "... [ ${bold}OK$reset ]\n"
        else
            printf "... [ ${bold}FAILED$reset: Git error ] - trying to copy instead\n"
            copyRepo "$author" "${destination%/*}" "$repo"
        fi
    else
        choice quit 'Git is not installed on this machine' \
        'I want to install git and retry later' \
        'I want to simply copy the repositories'

        copyRepo "$author" "${destination%/*}" "$repo"
    fi
}

pullRepo() { # {{{1

    local author="$1"
    local repo="$2"
    local destination="$3"

    if [[ $author == $me ]]; then

        local remote_host="git@$github:"
    else
        local remote_host="git://$github/"
    fi

    if [[ -d $destination/.git ]]; then

        if [[ $git ]]; then

            printf "\n%-50s" "${bold}Updating $repo repository$reset..."

            if git pull -q "$remote_host$author/$repo.git" master >/dev/null 2>&1; then

                printf "... [ ${bold}OK$reset ]\n"
            else
                choice go_on "... [ ${bold}FAILED$reset: Git error ]" \
                'Abort' \
                'I want to copy over the existing repository'

                rm -rfv "$destination"
                copyRepo "$author" "${destination%/*}" "$repo"
            fi
        else
            choice quit "Cannot update $repo: Git is not installed" \
            'I want to install git and retry later' \
            'I want to copy over the existing repositories'

            rm -rfv "$destination"
            copyRepo "$author" "${destination%/*}" "$repo"
        fi
    else
        warn "$repo is not a Git working copy"
        warn "overwriting $repo..."

        rm -rfv "$destination"
        copyRepo "$author" "${destination%/*}" "$repo"
    fi
}

linkToRepo() { # {{{1

    local repo="$1"
    local dotfile="$2"
    local repo_dotfile="$repo/$dotfile"

    if [[ ! -e $dotfiles/$dotfile ]]; then

        printf "\n\t"
        ln -sv "$repo_dotfile" "$dotfiles"
    else
        [[ -f $repo_dotfile ]] && local file='File'
        [[ -L $repo_dotfile ]] && local file='Link'
        [[ -d $repo_dotfile ]] && local file='Folder'

        if [[ ! -O $repo_dotfile ]]; then

            printf "\n\t$blue$file$reset $repo_dotfile ${blue}not owned by you$reset already exists\n\t"
        else
            printf "\n\t$blue$file$reset $repo_dotfile ${blue}owned by you$reset already exists\n\t"
        fi

        ln -isv "$repo_dotfile" "$dotfiles"
    fi
}

updateRepo() { # {{{1

    local author="$1"
    local repo_name="$2"
    local repo="$3"

    [[ -d $repo ]] && cd "$repo" &&
        pullRepo "$author" "$repo_name" "$repo"

    if [[ ! -d $repo ]] && cloneRepo "$author" "$repo_name" "$repo" ||
       [[ -d $repo && $arg_links ]]; then

        # If there are dotfiles to link to
        if [[ $4 ]]; then

            for dotfile in "${@:4}"; do

                linkToRepo "$repo" "$dotfile"
            done
        fi
    fi
}

# Actions {{{1

bash_dotfiles=(.{profile,bash_login,bash_profile})
bash_dotfiles+=(.{bashrc,bashrc_after,bash_logout,logout,inputrc})
help_dotfiles=(.{gitignore,screenrc,curlrc})
vim_dotfiles=(.{vimrc,gvimrc})

bash_repos="$repos/$bashfiles"
help_repos="$repos/$helpfiles"
vim_repos="$repos/$vimfiles"

updateRepo "$me" "$bashfiles" "$bash_repos" "${bash_dotfiles[@]}"
updateRepo "$me" "$helpfiles" "$help_repos" "${help_dotfiles[@]}"
updateRepo "$me" "$vimfiles"  "$vim_repos"  "${vim_dotfiles[@]}"

# .vim -> vimfiles, _vimrc, _gvimrc
if [[ -d $vim_repos ]]; then

    ln -sv "$vim_repos" "$dotfiles/.vim"

    if [[ ${arg_plugins[0]} == @(cp|mv) ]]; then

        cp -fv "$vim_repos/.vimrc" "$dotfiles/_vimrc"
        cp -fv "$vim_repos/.gvimrc" "$dotfiles/_gvimrc"
    fi
fi

# Vim plugins
if [[ ! $arg_omit ]]; then

    vim_plugins="$vim_repos/plugins"

    updateRepo "$godlygeek" csapprox      "$vim_plugins/csapprox"
    updateRepo "$godlygeek" tabular       "$vim_plugins/tabular"
    updateRepo "$spiiph"    vim-space     "$vim_plugins/vim-space"
    updateRepo "$tpope"     vim-surround  "$vim_plugins/vim-surround"
    updateRepo "$tpope"     vim-repeat    "$vim_plugins/vim-repeat"

    if [[ -d $vim_plugins ]]; then

        for plugin in "$vim_plugins"/*; do

            while read -r -d $'\0'; do

                if [[ cp == ${arg_plugins[0]} ]]; then

                    reply=${REPLY##*$plugin/}
                    reply=${reply%/*}
                    "${arg_plugins[@]}" -- "$REPLY" "$vim_repos/$reply"

                else
                    "${arg_plugins[@]}" -- "$REPLY" "$vim_repos/${REPLY##*$plugin/}"
                fi

            done < <(find "$plugin" \( -name '*.vim' -o -name '*.txt' \) -print0)

        done
    fi
fi

# Create a symlink of this script in ~/bin
if [[ -d $bash_repos/scripts && ! -L $HOME/bin/$program ]]; then

    if [[ ! -d $HOME/bin ]]; then

        mkdir -v "$HOME/bin" && ln -s "$bash_repos/scripts/$program" "$HOME/bin"
    else
        ln -s "$bash_repos/scripts/$program" "$HOME/bin"
    fi
fi

# vim: se fdm=marker fmr&:
